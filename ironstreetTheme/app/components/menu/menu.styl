#mainMenu
	background rgba(0,0,0,.3)
	height 124px
	width 100%
	position fixed
	top 0
	left 0
	z-index 10000
	.menu_mobile
		display none
	ul
		text-transform uppercase
		color white
		margin 0
		padding 0
		display flex
		flex-direction row
		justify-content flex-end
		line-height 120px
		li
			margin 0 1em
			cursor pointer
			list-style none
			a, a:visited, a:hover
				color inherit
				text-decoration none
			&.current-menu-item
				border-bottom 4px solid $ironRed
			&:last-child
				a
					border 1px solid white
					font-size 0.7em
					padding .3em

@media screen and (max-width: 568px)
	#mainMenu
		background rgba(0,0,0,.3)
		height 62px
		ul
			display none
			width 100%
			background rgba(0,0,0,.7)
			position fixed
			height 100%
			flex-direction column
			text-align center
		.menu_mobile
			cursor pointer
			display block
			position absolute
			right 20px
			top 13px
