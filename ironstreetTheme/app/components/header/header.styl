.fullHeight
  height 100%
header
  width 100%
  text-align center
  color white
  &>div
    width 100%
    height 100%
    h1 
      font-weight 100 
      font-size 3.5em
  .header1
    background url('../assets/video_bg.jpg') no-repeat
    background-size cover
    position relative
    box-shadow 0 4px 9px rgba(0, 0, 0, 0.62)
    p
      margin 0 auto
      width 50%
    .buildAQuote_button
      cursor pointer
      border 2px solid white
      margin 2em auto
      padding 1em 2em
    .down_button
      position absolute
      bottom 0
      width 100%
      figure
        text-align center    
      img
        cursor pointer
        width 54px
        height 54px
        
  .header2
    background url('../assets/header2.png') no-repeat
    background-size auto 100%
    background-position center
    height auto
    padding 10em 0em
    box-sizing border-box
    span
      border-bottom 4px solid $ironRed
    p
      font-size 1.2em
