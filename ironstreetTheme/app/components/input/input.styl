.input
  color $ironRed
  text-align left
  position relative
  label
    background white
    position relative
    font-size .5em
    padding 0 1em
    top .8em
    left .5em
    text-transform uppercase
  input
    border 2px solid $inputBorder
    display block
    box-sizing border-box
    padding .8em 1em
    width 100%

@media screen and (max-width: 567px)
  .input
    input
      width 100%
