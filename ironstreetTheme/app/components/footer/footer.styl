footer
  .footer
    background url('../assets/footer_bg.jpg') no-repeat
    background-size auto 100%
    padding 4em 0
    color $ironFooterGray
    width 100%
  .cat
      text-transform uppercase
      font-weight bold
      ul
        font-weight 100
        font-size .8em
        text-transform none
        list-style none
    ul
      margin 0
      padding 0
      li
        list-style none

  .redes
    text-align center
    [class^="icon-"]
      color $ironRed
      font-size 2.5em
      margin .1em
      cursor pointer

@media screen and (max-width: 568px)
  footer
    .footer
      ul
        text-align center
