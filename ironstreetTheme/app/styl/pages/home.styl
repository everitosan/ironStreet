.social-media
  min-height 170px
  .iconContainer
    text-align center
    .logo
      height 41px
      width 36px
  [class^="icon-"]
    color $ironSoftLightGray
    cursor pointer
    margin .15em
.separator
  margin 0 1em

.our-mission
  background url("../assets/ourmission_bg.jpg") no-repeat
  background-size cover
  color white
  box-sizing border-box
  p
    font-size 1.2em
.our_plus
  img
    height 30px
  h3
    font-weight 100
  p
    width 90%
    font-size .8em

.testimonial
  height 360px
  color $ironGray
  div
    display inline-block
    vertical-align bottom
  .quotation
    font-family 'Helvetica'
    font-size 118px
  .text
    max-width 90%
  .logo
    position relative
    top 2em
    text-align center
    figure
      margin 0
    img
      width 100%
    a, a:visited, a:hover
      color $ironRed
      text-decoration none

.services
  background url("../assets/services_bg.jpg") no-repeat
  background-size cover
  h2
    color $ironRed
  .text
    color $ironGrayTwo
    font-size 1.5em
    margin 2em 0em 3em 0em
  [class^="icon-"]
    font-size 5em
  .item
    cursor pointer
    color $ironSoftGray
    padding 0 .5em
    box-sizing border-box
    font-size .8em
    img
      display block
      margin 0 auto
    .outboxButton
      margin 2em 2.3em
      span
        border 1px solid $ironSoftGray
        border-radius 2px
    p
      text-align justify
    .learnM
      text-transform uppercase
      font-size .8em
      text-align left
      cursor pointer
      font-weight bold

.how_we_work
  color $ironGray
  padding-left 0
  padding-right 0
  h2
    color $ironRed
  .slider
    display none
    position relative
    .slide
      background url('../assets/slide_bg.jpg') no-repeat
      background-size cover
      padding 5em 2em
      color white
      h2
        color white
      .button
        margin 7em 0 0em 0
    .slidesjs-control
      height 500px !important
    .slidesjs-stop
      display none !important
    .slidesjs-previous, .slidesjs-next
      position absolute
      top 0
      z-index 10
    .slidesjs-previous
      left 0
    .slidesjs-next
      right 0
    .slidesjs-pagination
      margin .5em 0
      .active
        border-color $ironRed
        background $ironRed
      li
        display inline-block
        vertical-align top
        margin 0 5px
        height 10px
        width 10px
        a
          border-radius 50%
          border 2px solid $ironSoftGray
          width 100%
          height 100%
          text-decoration none
          font-size .3em
          color white
.say_hello
  background url('../assets/email_bg.jpg') no-repeat
  background-size cover
  color white
  div
    padding .1em .7em
    box-sizing border-box
  input, textarea
    color $ironRed
    font-size 1em
    padding .4em 0 .4em .4em
    width 100%
    border none
    resize none

@media screen and (max-width: 768px)
  .testimonial
    height auto
    margin-bottom 4em
    div
      display block
    .text
      margin 0 auto
    .logo
      width 100px
      margin 0 auto
  .how_we_work
    .slider
      .slide
        padding 5em 1em
