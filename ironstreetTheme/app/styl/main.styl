html, body
  font-family 'Gill Sans'
  margin 0
  padding 0
  height 100%
  width 100%

a
  text-decoration none
  color inherit
  &:visited
    color inherit

article
  text-align center
  padding 3em 4em
  box-sizing border-box
h2
  font-size 2.3em
  font-weight 100
  font-family 'Conv_BIG JOHN'
  margin 0

.vCenter
  display flex
  flex-direction column
  justify-content center

.HCenter
  display block
  margin 0 auto

.left
  text-align left

.button
  cursor pointer
  margin 2em 0
  text-align center
  span
    color white
    background $ironRed2
    text-transform uppercase
    padding .5em 1em

.outboxButton
  cursor pointer
  font-size 12px
  margin 2em 0
  span
    border 1px solid white
    text-transform uppercase
    padding .5em 1em

.redButton span
  background $ironRed

input
  &:focus
    outline none
    border-color $ironRed !important

[class^="icon-"]
  font-size 3em

@media screen and (max-width: 768px)
  article
    padding 3em 1em
